        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NPCDialogDebug" Height="280" Width="339">
    <Grid>
        <ListBox HorizontalAlignment="Stretch"
                 Margin="10,50,10,10"
                 Name="DialogListbox"
                 VerticalAlignment="Stretch" />
        <Button Content="Display Debug Info"
                Height="23"
                HorizontalAlignment="Left"
                Margin="12,12,0,0"
                Name="DisplayDebugInfo"
                VerticalAlignment="Top"
                Width="Auto"
                Click="DisplayDebugInfo_Click" />
    </Grid>
</Window>
