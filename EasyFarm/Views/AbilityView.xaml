<UserControl x:Class="EasyFarm.Views.AbilityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="60"
             d:DesignWidth="350">
    <Grid Width="350"
          Height="60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="76*" />
            <ColumnDefinition Width="93*" />
            <ColumnDefinition Width="194*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <CheckBox IsChecked="{Binding Enabled}">Enabled</CheckBox>
        <Button Grid.Row="1"
                Content="Set"
                Command="{Binding ElementName=lstAbilities, Path=DataContext.SetCommand}" />
        <Label Grid.Column="1">Name</Label>
        <TextBox Grid.Column="2"
                 Text="{Binding NameX}" />
        <!-- Recast on buff wearing-->
        <Label Grid.Column="1"
               Grid.Row="1">Recast on wear</Label>
        <TextBox Grid.Row="1"
                 Grid.Column="2"
                 Text="{Binding Buff}" />
    </Grid>
</UserControl>
